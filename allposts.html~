                    $sql = "SELECT *,SUBSTRING_INDEX(  `story` ,  ' ', 3 ) from blog ORDER BY id desc";            

                    $result=display($sql);

                    //$nextid[10000]
                    if($result->num_rows > 0)
                    {
                        while($row = $result->fetch_assoc())
                        {?>
                            <form name="submitForm" method="POST" action="seestory.php">
                                <input type="hidden" name="id" value="<?php echo $row["id"] ?>" style="color: BLACK">
                                <A HREF="javascript:document.submitForm.submit()" >
                                <p style="color: BLACK" id = "id" value = "id1">Title:
                                <?php echo $row["title"] ?></p></A>
                            </form>
